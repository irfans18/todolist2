<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/v2dark30">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/v2dark60"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_titlepage_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="LET'S DO IT!"
                    android:textColor="@color/v2dark5"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/home_subtitlepage_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Finish Quickly, Rest Longly"
                    android:textColor="@color/v2dark30"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/home_addTask_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/bgadditem"
                android:text="+"
                android:textAlignment="center"
                android:textSize="38sp" />

        </LinearLayout>

        <View
            android:id="@+id/home_border_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/v2dark5" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_private_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Private"
            android:textColor="@color/v2dark60" />

        <Button
            android:id="@+id/home_public_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Public"
            android:textColor="#707070" />



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_tasks_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/home_endpage_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="no more does"
        android:textAlignment="center"
        android:textColor="@color/v2dark5"
        android:textSize="16sp" />

</LinearLayout>
    </RelativeLayout>
    </ScrollView>
</layout>
