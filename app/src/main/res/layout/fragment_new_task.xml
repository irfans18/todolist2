<?xml version="1.0" encoding="utf-8"?>
<layout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/v2dark30"
    android:layout_width="wrap_content">

<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/v2dark60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlepage_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Create New Task"
            android:textColor="@color/v2dark5"
            android:textSize="32sp" />

        <View
            android:id="@+id/border_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/v2dark5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-65dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bgitemtask"
        android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_task_addTitle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Add Title"
                android:textColor="@color/v2dark30"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/new_task_taskTitle_et"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bginputtask"
                android:hint="What will you do?"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:importantForAutofill="no" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_task_addDesc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Description"
                android:textColor="@color/v2dark30"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/new_task_taskDesc_et"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bginputtask"
                android:hint="How do you do that?"
                android:inputType="text"
                android:maxLength="30"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:importantForAutofill="no" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_task_addDate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Deadline"
                android:textColor="@color/v2dark30"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/new_task_taskDate_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bginputtask"
                android:paddingTop="15dp"
                android:hint="When will you finish it?"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/v2dark30"
                android:textSize="18sp"
                android:text="Wanna share Task?" />
            <RadioGroup
                android:id="@+id/new_task_privacy_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/new_task_private_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Private"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/new_task_public_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Public"
                    android:textSize="13sp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/new_task_saveTask_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bgcreatebtn"
        android:textSize="22sp"
        android:textColor="@color/v2dark5"
        android:text="Create Task"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/new_task_cancelTask_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bgcancelbtn"
        android:textSize="22sp"
        android:textColor="#AFAFAF"
        android:text="Cancel"
        android:textAllCaps="false"/>

</LinearLayout>
</RelativeLayout>
</ScrollView>
</layout>