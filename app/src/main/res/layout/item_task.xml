<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bgitemtask">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Judul"
            android:textColor="@color/v2dark30"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/taskDesc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="deskripsi"
            android:textColor="@color/v2dark60"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="45dp"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taskDate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/v2dark10"
            android:text="Tomorrow"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>